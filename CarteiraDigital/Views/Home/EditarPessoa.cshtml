

@{
    ViewData["Title"] = "Home Page";
}
@model CarteiraDigital.Entidades.Tabela_Pessoas

    

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PES_CODIGO)

            <div class="form-group">
                <label>Nome</label>
                <div class=" col-12 col-md-6">
                    @Html.EditorFor(model => model.PES_NOME, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                <label>E-mail</label>
                <div class="col-12 col-md-6">
                    @Html.EditorFor(model => model.PES_EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label>Salário</label>
                <div class=" col-12 col-md-6">
                    @Html.EditorFor(model => model.PES_SALARIO, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                <label>Límite Segurança</label>
                <div class=" col-12 col-md-6">
                    @Html.EditorFor(model => model.PES_LIMITE, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                <label>Mínimo</label>
                <div class=" col-12 col-md-6">
                    @Html.EditorFor(model => model.PES_MINIMO, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                <label>Saldo</label>
                <div class=" col-12 col-md-6">
                    @Html.EditorFor(model => model.PES_SALDO, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6 d-flex justify-content-end">
                    <input type="submit" value="Editar" class="btn btn-success" />
                </div>
            </div>
        }




        <style>
            label {
                margin-left: 15px;
            }

            body {
                background-color: rgb(194, 207, 197);
            }
        </style>
