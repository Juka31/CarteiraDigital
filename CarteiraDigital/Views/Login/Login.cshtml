@model CarteiraDigital.Entidades.Tabela_Usuario
@{
    Layout = "LayoutPuro";
}
<div class="content " >
    <div class="container"style="margin:100px 200px;">
        <div class="row">
            <div class="col-md-6 order-md-2">
               
            </div>
            <div class="col-md-6 contents">
                <div class="row justify-content-center ">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <h3>Acesse sua <strong>Carteira Digital</strong></h3> <br/>
                            <p class="mb-4">Seja bem vindo a sua nova carteira digital</p>
                        </div>
                        <form action="#" method="post">
                            <div class="form-group first">
                                <label for="username">Nome</label>
                                <input asp-for="Usuario" type="text" class="form-control" id="username">

                            </div>
                            <div class="form-group last mb-4">
                                <label for="password">Senha</label>
                                <input asp-for="Senha" type="password" class="form-control" id="password">

                            </div>

                            <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                    <span class="caption">Lembrar-me</span>
                                    <input type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                                <span class="ml-auto"><a asp-controller="Cadastro" asp-action="Cadastro" class="forgot-pass">Cadastrar-Se</a></span>
                            </div>

                            <input type="submit" value="Login" class="btn text-white btn-block btn-primary">
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>